<h1> Edit Your Post </h1>

<form action="/posts/<%=@post.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <div>
    <label for="post_title">Title</label>
    <input type="text" id="post_title" name="post[title]" value="<%= @post.title %>"> </input>
  </div>
  <div>
    <label for="post_content">Content</label>
    <input type="text" id="post_content" name="post[content]" value="<%= @post.content %>"> </input>
  </div>
  <div>
    <label for="start_date">Start Date</label>
    <input type="date" id="start_date" name="post[start_date]" value="<%= @post.start_date %>"> </input>
  </div>
  <div>
    <label for="end_date">End Date</label>
    <input type="date" id="end_date" name="post[end_date]" value="<%= @post.end_date %>"> </input>
  </div>

  <h3>Destinaion tags:</h3>

  <% Destination.all.each do |d| %>
    <input type="checkbox" name="post[destination_ids][]" value="<%= d.id %>" id="destination_<%= d.id %>"  <%='checked' if @post.destinations.include?(d)%>>
    <label><%= d.country %></label>
    <br>
  <% end %>

  <br><br>

  <input type="submit" value="Save Changes"><br>
</form>

<form action="/posts/<%=@post.id%>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Post">
</form>