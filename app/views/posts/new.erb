<h1>New Post!</h1>

<form action="/posts" method="POST">
  <div>
    <label for="post_title">Title</label>
    <input type="text" id="post_title" name="post[title]"></input>
  </div>
  <div>
    <label for="post_content">Content</label>
    <textarea type="text" id="post_content" name="post[content]"></textarea>
  </div>

  <div>
    <label for="start_date">Start Date</label>
    <input type="date" id="start_date" name="post[start_date]"</input>
  </div>
  <div>
    <label for="end_date">End Date</label>
    <input type="date" id="end_date" name="post[end_date]"></input>
  </div>

  <br><br>

  Select all destinaion tags<br>

  <% @destinations.each do |destination| %>
    <input type="checkbox" value="<%= destination.country %>" id="<%= destination.country %>"><%= destination.country %></input>
  <% end %>

  <br><br>
  <input type="submit" value="post"></input>

</form>

