<h1> Edit Your Comment </h1>

<form action="/posts/<%=@post_id%>/comments/<%=@comment.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <div>
    <label for="comment_content">Content</label>
    <input type="text" id="comment_content" name="comment[content]" value="<%= @comment.content %>"> </input>
  </div>
  <input type="submit" value="Save Changes"><br>
</form>


<form action="/posts/<%=@post_id%>/comments/<%=@comment.id%>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Comment">
</form>